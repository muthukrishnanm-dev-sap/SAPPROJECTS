{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4.12.2",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-bookcapmui": "cds watch --open bookcapmui/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy bookshop --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "sql": {
      "native_hana_associations": false
    },
    "requires": {
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mocked",
          "users": {
            "muthu": {
              "password": "welcome1",
              "roles": [
                "Admin"
              ]
            },
            "kid1": {
              "password": "welcome2",
              "roles": [
                "Kids"
              ],
              "userAttributes": {
                "booksAgeGroup": [
                  "KIDS"
                ]
              }
            }
          }
        }
      },
      "[production]": {
        "db": "hana"
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/bookcapmui"
  ]
}